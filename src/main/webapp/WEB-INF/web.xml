<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Archetype Created Web Application</display-name>

  <context-param>
    <param-name>contextParam1</param-name>
    <param-value>contextParam1</param-value>
  </context-param>
  <context-param>
    <param-name>contextParam2</param-name>
    <param-value>contextParam2</param-value>
  </context-param>

  <context-param>
    <param-name>springContextConfig</param-name>
    <param-value>SpringContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>lxd.Hello.SpringContextListener</listener-class>
  </listener>

  <welcome-file-list>
    <welcome-file>Hello.html</welcome-file>
  </welcome-file-list>


  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>lxd.Hello.FirstServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/HelloServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ServletConfigTest</servlet-name>
    <servlet-class>lxd.Hello.ServletConfigTest</servlet-class>
    <init-param>
      <param-name>data1</param-name>
      <param-value>abcdefg</param-value>
    </init-param>
    <init-param>
      <param-name>data2</param-name>
      <param-value>abcdefgh</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletConfigTest</servlet-name>
    <url-pattern>/ServletConfig</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ServletContextTest</servlet-name>
    <servlet-class>lxd.Hello.ServletContextTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletContextTest</servlet-name>
    <url-pattern>/ServletContextTest</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletResponseTest</servlet-name>
    <servlet-class>lxd.Hello.ServletResponseTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletResponseTest</servlet-name>
    <url-pattern>/ServletResponseTest</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RequestTest</servlet-name>
    <servlet-class>lxd.Hello.RequestTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestTest</servlet-name>
    <url-pattern>/RequestTest</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CookieTest</servlet-name>
    <servlet-class>lxd.Hello.CookieTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CookieTest</servlet-name>
    <url-pattern>/CookieTest</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CookieShop</servlet-name>
    <servlet-class>lxd.Hello.CookieShop</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CookieShop</servlet-name>
    <url-pattern>/CookieShop</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CookieShopInfo</servlet-name>
    <servlet-class>lxd.Hello.CookieShopInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CookieShopInfo</servlet-name>
    <url-pattern>/CookieShopInfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SessionTest</servlet-name>
    <servlet-class>lxd.Hello.SessionTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SessionTest</servlet-name>
    <url-pattern>/SessionTest</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SessionFormGenToken</servlet-name>
    <servlet-class>lxd.Hello.SessionFormGenToken</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SessionFormGenToken</servlet-name>
    <url-pattern>/SessionFormGenToken</url-pattern>
  </servlet-mapping>

</web-app>
